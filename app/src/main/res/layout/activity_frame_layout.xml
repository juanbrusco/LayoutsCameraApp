<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameLayoutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_estadistica"
        android:layout_gravity="center|bottom"
        android:src="@android:drawable/btn_star"
        android:padding="16dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_estadistica1"
        android:layout_gravity="center"
        android:src="@android:drawable/btn_star"
        android:padding="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_estadistica2"
        android:layout_gravity="center|top"
        android:src="@android:drawable/btn_star"
        android:padding="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_estadistica3"
        android:layout_gravity="center|top|end"
        android:src="@android:drawable/btn_star"
        android:padding="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagen_estadistica4"
        android:layout_gravity="center|top|start"
        android:src="@android:drawable/btn_star"
        android:padding="16dp" />

</FrameLayout>